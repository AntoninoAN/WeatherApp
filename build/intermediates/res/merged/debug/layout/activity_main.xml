<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="5dp"
    >
<TextView
    android:textColor="@color/content_background"
    android:id="@+id/tv_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/text_body"
    android:gravity="left"
    android:layout_margin="15dp"
    />
    <TextView
        android:textColor="@color/content_background"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_titles"/>
    <TextView
        android:textColor="@color/content_background"
        android:id="@+id/tv_grades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

</android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_current"
app:cardUseCompatPadding="true"
        android:layout_margin="3dp"
        app:cardCornerRadius="3dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/forecast_card_divider">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_forecast"
        app:cardUseCompatPadding="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="3dp"

        android:layout_width="match_parent"
        android:layout_height="150dp"></android.support.v7.widget.CardView>

</LinearLayout>
